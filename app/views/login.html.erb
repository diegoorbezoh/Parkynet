<%= content_for :title, 'Iniciar sesión' %>

<%= content_for :body do %>
  <section>
    <div class="row">
      <div class="col-md-3 center p-30 background-white b-r-6 animated visible zoomIn" data-animation="zoomIn" data-animation-delay="500">
        <% if @message.present? %>
          <div role="alert" class="alert alert-danger"> <strong>Oh snap!</strong> <%= @message %> </div>
        <% end %>
        <h3>Iniciar sesión</h3>
        <form class="form-transparent-grey" data-toggle="validator" method="post">
          <div class="form-group">
            <label class="sr-only">Correo electrónico</label>
            <input type="email" name="user_email" class="form-control" placeholder="Correo electrónico" required />
          </div>
          <div class="form-group m-b-5">
            <label class="sr-only">Contraseña</label>
            <input type="password" name="user_password" class="form-control" placeholder="Contraseña" required />
          </div>
          <div class="form-group form-inline text-left ">
            <div class="checkbox">
              <label>
                <input type="checkbox"><small> Recordarme</small>
              </label>
            </div>
            <a href="#" class="right"><small>¿Perdió su contraseña?</small></a>
          </div>
          <div class="text-left form-group">
            <input type="submit" class="btn btn-danger" value="Iniciar sesión">
          </div>
        </form>
        <p class="small">¿Aún no tiene una cuenta? <a href="/register">Registrar una nueva cuenta</a></p>
      </div>
    </div>
  </section>
<% end %>
